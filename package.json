{
    "name": "iot-chaos-service",
    "version": "3.0.32",
    "description": "IoT chaos service",
    "main": "index.js",
    "scripts": {
        "test": "node ./node_modules/jest/bin/jest.js",
        "eslint": "eslint -c .eslintrc.json --ext .ts,.js ./src",
        "build": "node ./node_modules/typescript/bin/tsc -p .",
        "dockerbuild": "npm run build && node ./node_modules/loopbox-utils/dist/scripts/dockerBuild.js -b -r .",
        "dockerpush": "node ./node_modules/loopbox-utils/dist/scripts/dockerBuild.js -p -r .",
        "preversion": "npm test",
        "version": "npm run dockerbuild",
        "postversion": "npm run dockerpush",
        "postinstall": "node ./node_modules/loopbox-utils/dist/scripts/postInstallSetup.js -r ."
    },
    "author": "sseiber",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git@github.com:sseiber/iot-chaos-service.git"
    },
    "dependencies": {
        "@azure/cosmos": "^3.17.3",
        "@hapi/bell": "^13.0.1",
        "@hapi/boom": "^10.0.1",
        "@hapi/cookie": "^12.0.1",
        "@hapi/hapi": "^21.3.1",
        "@hapi/inert": "^7.1.0",
        "@hapi/nes": "^13.0.1",
        "@hapi/wreck": "^18.0.1",
        "@types/qs": "^6.9.7",
        "cheerio": "^1.0.0-rc.12",
        "commander": "^10.0.0",
        "fs-extra": "^11.1.0",
        "hapi-auth-jwt2": "^10.4.0",
        "jsonwebtoken": "^9.0.0",
        "loopbox-utils": "^3.1.0",
        "nconf": "^0.12.0",
        "qs": "^6.11.1",
        "spryly": "^3.0.2",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@types/azure": "^0.9.20",
        "@types/fs-extra": "^11.0.1",
        "@types/hapi__cookie": "^12.0.2",
        "@types/hapi__inert": "^5.2.6",
        "@types/hapi__nes": "^11.0.6",
        "@types/jest": "^29.5.0",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/nconf": "0.10.3",
        "@types/node": "^18.15.11",
        "@types/uuid": "^9.0.1",
        "@types/ws": "^8.5.4",
        "@typescript-eslint/eslint-plugin": "^5.58.0",
        "@typescript-eslint/parser": "^5.58.0",
        "eslint": "^8.38.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jsdoc": "^40.1.2",
        "jest": "^29.5.0",
        "ts-jest": "^29.1.0",
        "typescript": "^5.0.4"
    },
    "jest": {
        "rootDir": "./src/",
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ],
        "transform": {
            ".tsx?": "ts-jest"
        },
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "./__mocks__/fileMock.js"
        }
    }
}
